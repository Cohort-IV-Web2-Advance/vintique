# Database Configuration
DATABASE_URL=mysql+pymysql://vintique_user:vintique_password@db:3306/vintique_db
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=vintique_db
MYSQL_USER=vintique_user
MYSQL_PASSWORD=your_secure_user_password

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Environment
ENVIRONMENT=production

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Gunicorn Configuration
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2

# Frontend Configuration
VITE_API_URL=http://localhost:8000
NODE_ENV=production
